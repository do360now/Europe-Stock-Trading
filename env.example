# Stock Analysis Bot - Environment Variables
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git!

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1

# E*TRADE API Credentials (optional, for automated trading)
# Get these from: https://developer.etrade.com/
ETRADE_CONSUMER_KEY=your_consumer_key_here
ETRADE_CONSUMER_SECRET=your_consumer_secret_here
ETRADE_SANDBOX=true

# Trading212 API Credentials (recommended for European stocks)
# Get these from: Trading212 App > Settings > API (Beta)
TRADING212_API_KEY=your_api_key_here
TRADING212_API_SECRET=your_api_secret_here
TRADING212_MODE=demo  # "demo" or "live"

# Alpaca API (alternative broker - better for automation)
# Get these from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper trading URL

# Interactive Brokers (another alternative)
IB_GATEWAY_HOST=localhost
IB_GATEWAY_PORT=4001
IB_CLIENT_ID=1
